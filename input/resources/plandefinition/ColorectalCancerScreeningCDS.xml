  <name value='ColorectalCancerScreeningCDS'/>
  <title value='Colorectal cancer screening'/>
  <type>
    <coding>
      <system value='http://terminology.hl7.org/CodeSystem/plan-definition-type'/>
      <code value='eca-rule'/>
      <display value='ECA Rule'/>
    </coding>
  </type>
